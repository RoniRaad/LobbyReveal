{
  "AboutEndpoints": {
    "Github": "https://github.com/RoniRaad/LobbyReveal"
  },
    "Logging": {
      "LogLevel": {
        "Default": "Information"
      },
      "File": {
        "BasePath": "Logs",
        "FileAccessMode": "KeepOpenAndAutoFlush",
        "FileEncodingName": "utf-8",
        "DateFormat": "yyyyMMdd",
        "CounterFormat": "000",
        "MaxFileSize": 10485760,
        "IncludeScopes": true,
        "MaxQueueSize": 100,
        "Files": [
          {
            "Path": "<date:yyyy>/<date:MM>/LobbyReveal-<counter>.log",
            "CounterFormat": "00"
          }
        ]
      }
    }
  }